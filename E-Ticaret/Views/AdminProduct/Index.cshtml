@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
